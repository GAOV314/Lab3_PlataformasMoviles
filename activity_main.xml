<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#CE000000"
    android:textAlignment="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/expressionTextView"
        android:layout_width="303dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/num1Button"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#59FFFFFF"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/num2Button"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expressionTextView" />

    <Button
        android:id="@+id/num2Button"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#59FFFFFF"
        android:text="2"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/num3Button"
        app:layout_constraintTop_toBottomOf="@+id/expressionTextView" />

    <Button
        android:id="@+id/num3Button"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#59FFFFFF"
        android:text="3"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expressionTextView" />

    <Button
        android:id="@+id/num4Button"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#59FFFFFF"
        android:text="4"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/num5Button"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num1Button" />

    <Button
        android:id="@+id/num5Button"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#59FFFFFF"
        android:text="5"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/num6Button"
        app:layout_constraintTop_toBottomOf="@+id/num2Button" />

    <Button
        android:id="@+id/num6Button"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#59FFFFFF"
        android:text="6"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num3Button" />

    <Button
        android:id="@+id/cleanButton"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFC107"
        android:text="Clean"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num7Button" />

    <Button
        android:id="@+id/num0Button"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#59FFFFFF"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/cleanButton"
        app:layout_constraintTop_toBottomOf="@+id/num8Button" />

    <Button
        android:id="@+id/resultButton"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#FFC107"
        android:text="="
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num9Button" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="98dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFC107"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cleanButton" />

    <Button
        android:id="@+id/subButton"
        android:layout_width="98dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFC107"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/plusButton"
        app:layout_constraintTop_toBottomOf="@+id/num0Button" />

    <Button
        android:id="@+id/multButton"
        android:layout_width="98dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#FFC107"
        android:text="*"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultButton" />

    <Button
        android:id="@+id/divButton"
        android:layout_width="98dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFC107"
        android:text="/"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plusButton" />

    <Button
        android:id="@+id/powerButton"
        android:layout_width="98dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFC107"
        android:text="^"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/divButton"
        app:layout_constraintTop_toBottomOf="@+id/subButton" />

    <Button
        android:id="@+id/squareButton"
        android:layout_width="98dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#FFC107"
        android:text="âˆš"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multButton" />

    <Button
        android:id="@+id/pointButton"
        android:layout_width="98dp"
        android:layout_height="64dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#FFC107"
        android:text="."
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/powerButton"
        app:layout_constraintVertical_bias="0.333" />

    <Button
        android:id="@+id/num7Button"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#59FFFFFF"
        android:text="7"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num4Button" />

    <Button
        android:id="@+id/num8Button"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#59FFFFFF"
        android:text="8"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/num7Button"
        app:layout_constraintTop_toBottomOf="@+id/num5Button" />

    <Button
        android:id="@+id/num9Button"
        android:layout_width="98dp"
        android:layout_height="108dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#59FFFFFF"
        android:text="9"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num6Button" />

    <Button
        android:id="@+id/openButton"
        android:layout_width="98dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:text="("
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divButton" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="98dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:text=")"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/squareButton" />

</androidx.constraintlayout.widget.ConstraintLayout>